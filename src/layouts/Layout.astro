---
import AsideMenu from '@components/AsideMenu.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative h-screen p-2 gap-2 bg-[#121212] font-sans">
    <aside>
      <AsideMenu />
    </aside>
    <main class="col-span-2 rounded-lg bg-zinc-900 overflow-y-auto">
      MAIN
      <slot name="main" />
    </main>
    <footer class="col-span-full min-h-[100px] bg-zinc-900">
      PLAYER
      <slot name="player" />
    </footer>
  </body>

  <style>
    body {
      display: grid;
      grid-template-columns: 350px 1fr 350px;
      grid-template-rows: 1fr auto;
    }
  </style>
</html>
