---
import type { Playlist } from '@lib/data';

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists, color } = playlist;

const artistsOfPlaylist = new Intl.ListFormat('en', {
  style: 'long',
  type: 'conjunction',
}).format(artists);
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800">
  <picture class="w-12 h-12 flex-none">
    <source srcset={cover} type="image/webp" />
    <img
      src={cover}
      alt={title}
      class="w-full h-full rounded-md object-cover"
      loading="lazy"
    />
  </picture>
  <div class="flex flex-col flex-auto truncate">
    <h4 class="font-semibold text-sm">
      {title}
    </h4>
    <span class="text-xs text-gray-400">
      {artistsOfPlaylist}
    </span>
  </div>
</a>
